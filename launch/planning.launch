<launch>
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <remap from="/odom" to="/odometry/filtered"/>
        <rosparam file="$(find srd_pkg)/config_jackal/costmap_common_params.yaml"       command ="load" ns="global_costmap"/>
        <rosparam file="$(find srd_pkg)/config_jackal/costmap_common_params.yaml"       command ="load" ns="local_costmap"/>
        <rosparam file="$(find srd_pkg)/config_jackal/local_costmap_params.yaml"        command ="load" />
        <rosparam file="$(find srd_pkg)/config_jackal/global_costmap_params.yaml"       command ="load" />
        <rosparam file="$(find srd_pkg)/config_jackal/base_local_planner_params.yaml"   command ="load" />

        <param name="base_local_planner"    value="teb_local_planner/TebLocalPlannerROS"/>
        <param name="controller_frequency"  value="10.0"/>
    </node>
</launch>